<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GMAOmachines" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use splash icon directly -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>

        <!-- Set animation duration -->
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Theme to transition to -->
        <item name="postSplashScreenTheme">@style/Theme.GMAOmachines</item>
    </style>
</resources>